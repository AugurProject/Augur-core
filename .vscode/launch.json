{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}",
            "args": [
                "-r", "ts-node/register",
                "source/tests-integration/**/*.ts",
                "--no-timeouts"
            ],
            "protocol": "inspector",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/output/**/*"
            ]
        }
    ]
}
